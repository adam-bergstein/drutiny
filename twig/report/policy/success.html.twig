<div class="row result-group">
  <div class="col-sm-12 col-md-10">
    <h4 id="{{ audit_response.policy.name }}">{{ audit_response.policy.title }} <small class="label label-{{ audit_response.type }}">{{ audit_response.type|split('-')|join(' ')|title }} <span class="glyphicon {% if audit_response.isSuccessful %}glyphicon-ok{% else %}glyphicon-remove{% endif %}" aria-hidden="true"></span></small></h4>
    {{ include(template_from_string(audit_response.policy.description | mustache2twig, "description field on success.html.twig" )) | markdown_to_html }}
    <div class="alert alert-success">
      <div class="alert-heading">{{ audit_response.type|split('-')|join(' ')|title }}</div>
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.policy.success | mustache2twig, "success field on success.html.twig")) | markdown_to_html }}
        {% endwith %}
    </div>
    {% if audit_response.hasWarning %}
    <div class="alert alert-warning" role="alert">
      <div class="alert-heading">Warning</div>
      {% with audit_response.tokens %}
      {{ include(template_from_string(audit_response.policy.warning | mustache2twig, "warning field on success.html.twig")) | markdown_to_html }}
      {% endwith %}
    </div>
    {% endif %}
  </div>
</div>
